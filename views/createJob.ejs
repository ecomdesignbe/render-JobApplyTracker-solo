<%- include('partials/header') -%>
    
    <main>
        <div class="container">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/login">Login</a></li>
                        <li class="breadcrumb-item"><a href="/profile">My profile</a></li>
                        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create Job</li>
                    </ol>
                </nav>
            </div>
            <div class="mt-3 mb-3 text-center">
                <h2>Create Job</h2>
            </div>            
            <form action="/createJob">
                <div class="col mb-3">
                    <label for="jobTitle" class="form-label">Job title</label>                        
                    <input type="text" class="form-control" name="jobTitle" aria-label="Job title" required>
                    <div class="jobtitle error"></div>
                </div>
                
                <div class="col mb-3">
                    <label for="website" class="form-label">Website</label>                        
                    <input type="text" class="form-control" aria-label="Website" name="website" required>
                    <div class="website error"></div>                    
                </div>
                
                <div class="col mb-3">
                    <p><strong>Employer's contact</strong></p>
                    <label for="employersContact" class="form-label">Name</label>                        
                    <input type="text" class="form-control" name="employersContact" aria-label="employersContact" required>
                    <div class="employersContact error"></div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email of contact</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" required>
                    <div class="email error"></div>
                </div>

                <div class="mb-3">
                    <label for="phone" class="form-label">Phone</label>
                    <input type="text" name="phone" class="form-control">
                </div>
                
                <div class="mb-4">
                    <label for="adress" class="form-label">Adress</label>
                    <input type="text" class="form-control" name="adress">
                </div>

                <div class="row mb-3">
                    <div class="col-md-2 mb-3">
                        <label for="form-select" class="form-label">Origin</label>
                        
                    </div>
                    <div class="col mb-3">
                        <select class="form-select" multiple aria-label="origin">
                            <option value="1">Candidature spontan√©e</option>
                            <option value="2">Job offer.</option>                            
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2 mb-3">
                        <label for="form-select" class="form-label">Status</label>
                        
                    </div>
                    <div class="col mb-3">
                        <select class="form-select" multiple aria-label="origin">
                            <option value="1">Interested</option>
                            <option value="2">CV sent</option>                            
                            <option value="3">Negative</option>                            
                            <option value="4">Interview</option>                            
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="floatingTextarea">Comments</label>
                    <textarea class="form-control mt-2" placeholder="Leave a comment here" name="Comments" id="comments"></textarea>
                    
                </div>

                <button type="submit" class="btn btn-danger">Save</button>
            </form>
        </div>        
    </main>

    <%- include('partials/footer') -%>